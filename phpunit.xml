<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         colors="true"
         verbose="true">
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/TestResources</directory>
        </testsuite>
    </testsuites>
    <extensions>
        <extension class="Allure2Adapter\Listener">
            <arguments>
                <string>results</string>
                <boolean>false</boolean>
            </arguments>
        </extension>
    </extensions>
</phpunit>
